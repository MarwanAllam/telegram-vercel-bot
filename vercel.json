{
  "version": 2,
  "builds": [
    { "src": "api/**/*.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "/api", "dest": "/api/index.py" },
    { "src": "/api/(.*)", "dest": "/api/index.py" }
  ],
  "functions": {
    "api/index.py": {
      "runtime": "python3.11"
    }
  }
}